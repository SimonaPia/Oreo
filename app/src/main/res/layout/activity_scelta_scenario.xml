<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/titolo_scenario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleziona l'ambientazione di gioco"
        android:textSize="18sp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_ambientazione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titolo_scenario"
        android:layout_marginTop="52dp"
        android:entries="@array/opzioni_scenario" />

    <LinearLayout
        android:id="@+id/linearlayout_scelte_alto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/spinner_ambientazione"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/scelta1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fiabesco" />

        <Button
            android:id="@+id/scelta2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Savana" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_scelte_basso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearlayout_scelte_alto"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/scelta3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pirati" />

        <Button
            android:id="@+id/scelta4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mondo Incantato" />
    </LinearLayout>

    <Button
        android:id="@+id/bottone_conferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conferma"
        android:layout_below="@id/linearlayout_scelte_basso"
        android:layout_marginTop="16dp"
        android:onClick="onConfermaClick" />

    <ImageView
        android:id="@+id/immagine_fiabesco"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/bottone_conferma"
        android:layout_marginTop="16dp"
        android:background="@drawable/fiabesco_immagine"
        android:visibility="gone"
        android:onClick="onImmagineClick" />
    <ImageView
        android:id="@+id/immagine_savana"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/bottone_conferma"
        android:layout_marginTop="16dp"
        android:background="@drawable/savana_immagine"
        android:visibility="gone"
        android:onClick="onImmagineClick" />

    <ImageView
        android:id="@+id/immagine_mondo_incantato"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/bottone_conferma"
        android:layout_marginTop="16dp"
        android:src="@drawable/mondo_incantato_immagine"
        android:visibility="gone"
        android:onClick="onImmagineClick" />

    <ImageView
        android:id="@+id/immagine_pirati"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/bottone_conferma"
        android:layout_marginTop="16dp"
        android:src="@drawable/pirata__immagine"
        android:visibility="gone"
        android:onClick="onImmagineClick" />

</RelativeLayout>
