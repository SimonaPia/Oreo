<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gioco1B_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gioco1B_fragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blu"
        >
        <ImageView
            android:id="@+id/icona_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/quiz_bambino"
            />

        <Button
            android:id="@+id/buttonAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icona_quiz"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/audio_nota"
            android:text="Ascolta Vocale" />

        <TextView
            android:id="@+id/chooseTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/icona_quiz"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:textColor="#99FFFFFF"
            android:text="Prova a ripetere queste parole registrando un audio."
            />

        <Button
            android:id="@+id/buttonRegistraAudio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseTopic"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:onClick="buttonRegistraAudioPressed"
            android:text="REGISTRA" />

        <Button
            android:id="@+id/buttonStopAudio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseTopic"
            android:layout_marginStart="150dp"
            android:layout_marginTop="60dp"
            android:onClick="buttonStopAudioPressed"
            android:text="STOP" />

        <Button
            android:id="@+id/buttonPlayAudio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseTopic"
            android:layout_marginStart="280dp"
            android:layout_marginTop="60dp"
            android:onClick="buttonPlayAudioPressed"
            android:text="PLAY" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonInvioRisposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INVIA RISPOSTA"
            android:layout_below="@+id/chooseTopic"
            android:layout_marginTop="170dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/round_back_green20"
            />
    </RelativeLayout>

</FrameLayout>